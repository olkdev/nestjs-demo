/* TSConfig Reference https://www.typescriptlang.org/docs */
{
  /* File Inclusion */
  "include": ["src", "typings"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    /* Project Options */
    "importHelpers": true,
    "isolatedModules": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2017",
    /* Strict Checks */
    "strict": true,
    /* Module Resolution */
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "#configs": ["src/configs"],
      "#configs/*": ["src/configs/*"],
      "#entities/*": ["src/entities/*"],
      "#models": ["src/models"],
      "#models/*": ["src/models/*"],
      "#utils/*": ["src/utils/*"],
      /* NestJS Modules */
      "#app/*": ["src/modules/app/*"],
      "#v1": ["src/modules/v1"]
    },
    "typeRoots": ["node_modules/@types", "typings"],
    /* Linter Checks */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Experimental */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Advanced */
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ES2019.Array"]
  }
}
