{
  "name": "nestjs-demo",
  "version": "1.0.0",
  "description": "A demo project for NestJS",
  "repository": "git@github.com:miZyind/nestjs-demo.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn clean && nest start --watch",
    "debug": "nest start --debug",
    "clean": "rimraf dist",
    "build": "yarn lint && yarn clean && nest build",
    "start": "node dist/main.js",
    "typeorm": "ts-node node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm migration:generate -n",
    "migration:create": "yarn typeorm migration:create -n",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "lint": "eslint '*/**/*.ts' --max-warnings 0",
    "test": "jest",
    "test:cov": "rimraf coverage && jest --coverage"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/microservices": "^7.0.7",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "^7.0.0",
    "@nestjsx/crud": "^4.4.2",
    "@nestjsx/crud-request": "^4.4.2",
    "@nestjsx/crud-typeorm": "^4.4.2",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "nestjs-config": "^1.4.5",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nestjs/cli": "^7.1.1",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.7",
    "@types/amqplib": "^0.5.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@types/passport": "^1.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-mizyind": "^1.0.16",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/modules/**/*.ts",
      "!**/modules/info/*.ts",
      "!**/modules/**/index.ts",
      "!**/modules/**/e2e-test.ts",
      "!**/modules/**/*.module.ts",
      "!**/modules/**/dtos/*.ts",
      "!**/modules/**/auth/*.ts",
      "!**/modules/**/responses/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/all",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "mizyind"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
