{
  "name": "nestjs-demo",
  "version": "1.0.0",
  "description": "A demo project for NestJS",
  "repository": "git@github.com:miZyind/nestjs-demo.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src --max-warnings 0",
    "dev": "yarn clean && nest start --path tsconfig.json --watch",
    "build": "yarn clean && yarn lint && nest build --path tsconfig.json",
    "start": "node dist/main.js",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "mg": "yarn typeorm migration:generate -n"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.5.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.5.1",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/swagger": "^4.7.2",
    "@nestjs/typeorm": "^7.1.4",
    "@nestjsx/crud": "^4.6.2",
    "@nestjsx/crud-request": "^4.6.2",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "amqp-connection-manager": "^3.2.1",
    "amqplib": "^0.6.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/cli": "^7.5.2",
    "@nestjs/schematics": "^7.2.1",
    "@types/amqplib": "^0.5.16",
    "@types/bcrypt": "^3.0.0",
    "@types/node": "^14.14.7",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "eslint-plugin-mizyind": "^2.0.6",
    "husky": "^4.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/base"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "no-type-imports",
          "disallowTypeAnnotations": false
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
