{
  "name": "nestjs-demo",
  "version": "1.0.0",
  "description": "A demo project for NestJS",
  "repository": "git@github.com:miZyind/nestjs-demo.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src --max-warnings 0",
    "dev": "yarn clean && nest start --path tsconfig.json --watch",
    "build": "yarn clean && yarn lint && nest build --path tsconfig.json",
    "start": "node dist/main.js",
    "mg": "typeorm migration:generate -n"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjsx/crud": "^5.0.0-alpha.0",
    "@nestjsx/crud-request": "^5.0.0-alpha.0",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "amqp-connection-manager": "^3.2.2",
    "amqplib": "^0.7.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "mysql": "^2.18.1",
    "nestjs-xion": "^1.2.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@types/amqplib": "^0.5.17",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^15.0.2",
    "@types/passport-jwt": "^3.0.5",
    "eslint-plugin-mizyind": "^2.3.2",
    "husky": "^4.3.8",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/base"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
